<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddEditTravelActivity"
    android:background="#EAEAEA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="여행 등록"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="여행의 간단한 정보를 입력해주세요."
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_contentss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="수정 시 앱이 재시작됩니다."
            android:textColor="@color/black" />
    </LinearLayout>
    <!--    <EditText-->
    <!--        android:id="@+id/edit_text_title"-->
    <!--        android:inputType="text"-->
    <!--        android:hint="Title"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content" />-->

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:textColor="#5D5D5D"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="여행지"/>

        <EditText
            android:maxLength="10"
            android:textSize="13dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:id="@+id/et_title"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="어느곳을 여행하셨나요?"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_id"
            app:layout_constraintStart_toStartOf="@+id/et_id"
            app:layout_constraintTop_toBottomOf="@+id/et_id" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:textColor="#5D5D5D"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="제목"/>
        <EditText
            android:maxLength="20"
            android:textSize="13dp"
            android:background="@null"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="여행의 이름을 정해주세요."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:textColor="#5D5D5D"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="별점"/>

        <RatingBar
            android:theme="@style/CustomRatingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.1"
            android:rating="2.5"
            android:isIndicator="false"
            />
        <TextView
            android:textSize="15dp"
            android:textColor="#A6A6A6"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:text="2.5"
            android:inputType="textPersonName" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:textColor="#5D5D5D"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="날짜"/>

        <TextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:id="@+id/tv_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="원하는 양식으로 작성해주세요."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_id"
            app:layout_constraintStart_toStartOf="@+id/et_id"
            app:layout_constraintTop_toBottomOf="@+id/et_id" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--    <TextView-->
    <!--        android:id="@+id/tv"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:textColor="#000000"-->
    <!--        android:textSize="30dp"-->
    <!--        android:text="0.1" />-->

</LinearLayout>