<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context=".test">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <TextView
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="여행을 저장하세요"
            android:textColor="#191919"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="이제부터는 여행을 화면 속에도 간직해보세요."
            android:textColor="#191919"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_contentss"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="저장 버튼으로 기본 정보를 입력해주세요."
            android:textColor="#191919"
            android:layout_gravity="center"/>

        <Button
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/black"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_delall"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="전체 삭제" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_below="@+id/ab123"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_image"
            android:layout_gravity="center"
            android:src="@drawable/nodata"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/empty_image"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="여행을 등록해보세요."
            android:textColor="#4C4C4C"
            android:textSize="15dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="170dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/note_item" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_add_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="32dp"
        app:rippleColor="@color/white"
        android:src="@drawable/ic_add"
        android:backgroundTint="#6799FF"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

