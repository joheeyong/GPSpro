<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <CalendarView
        android:id="@+id/calendar"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <RadioGroup
        android:layout_marginTop="10dp"
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/radio_button_train"
            android:button="@null"
            android:id="@+id/rg_Transport"
            android:layout_width="0dp"
            android:layout_height="50dp"
            />

        <RadioButton

            android:id="@+id/rg_lodgment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radio_button_like" />

        <RadioButton
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/radio_button_poke"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/rg_food"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical" />
        <RadioButton
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/radio_button_shopping"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/rg_shopping"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical" />
        <RadioButton
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/radio_button_rndwjs"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/rg_tourism"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical" />
        <RadioButton
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/radio_button_unlike"
            android:button="@null"
            android:id="@+id/rg_other"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical" />


    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:gravity="center"
            android:textSize="13dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="교통"
            android:textColor="#505050"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="숙박"
            android:textColor="#505050"
            android:textSize="13dp" />

        <TextView
            android:gravity="center"
            android:textSize="13dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="식비"
            android:textColor="#505050"/>
        <TextView
            android:gravity="center"
            android:textSize="13dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="쇼핑"
            android:textColor="#505050"/>
        <TextView
            android:gravity="center"
            android:textSize="13dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="관광"
            android:textColor="#505050"/>
        <TextView
            android:gravity="center"
            android:textSize="13dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="기타"
            android:textColor="#505050"/>


    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <TextView
        android:textColor="@color/white"
        android:id="@+id/edit_text_description"
        android:inputType="textMultiLine"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/edit_text_title"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:textSize="15dp"
        android:text=""
        android:gravity="center"
        android:id="@+id/tv_won"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:textColor="#747474"
        android:gravity="center"
        android:id="@+id/et_won"
        android:textSize="15dp"
        android:background="@null"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:hint="금액을 입력해주세요 (원) "
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

