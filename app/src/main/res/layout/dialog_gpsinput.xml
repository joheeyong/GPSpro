<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="주소 등록"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_gravity="center"
        />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="공식명칭이 아닌 예명 등록이 가능합니다."
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#6799FF"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText android:id="@+id/id"
            android:layout_marginLeft="140dp"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:hint="주소를 등록하세요"
            android:inputType="textPersonName"
            android:background="@null"
            android:textSize="12dp"
            />


        <EditText android:id="@+id/pw"
            android:layout_marginLeft="140dp"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:hint="메모를 입력하세요"
            android:inputType="textPersonName"
            android:textSize="12dp"
            android:background="@null" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/clicklng"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/clicklat"
            android:visibility="invisible"/>




    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_redzone"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소가 빈칸입니다."
        android:gravity="center"
        android:textColor="#CC3D3D"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="100dp"
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="확인"
            android:textSize="18sp"
            android:textColor="#4374D9" />

    <Button
        android:textAlignment="center"
        android:textColor="#4374D9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="18sp"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/btn_cancle"/>


    </LinearLayout>
</LinearLayout>

